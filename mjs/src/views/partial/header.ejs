<header id="id-header">
    <div class="img-logo-div">
        <a href="/">
            <img src="/images/logoMJS.jpeg" alt="MJS Foto" class="img-logo">
        </a>
    </div>
    <nav class="nav-bar-header">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/products">Productos</a></li>
            <li><a href="/products/create">Vender</a></li>
            <li><a href="/admin">Administrador</a></li>
        </ul>
    </nav>

    <div class="barra-icon-busqueda">

        <label for="barra-busqueda"></label>
        <input type="search" id="barra-busqueda" placeholder="Placas de video...">
        <button class="btn-header btn-lupa"><i class="fa-brands fa-sistrix"></i></button>

    </div>
    <div class="user-button">
        <div class="lupa">
            <a href="/carrito">
                <button class="btn-header"><i class="fa-solid fa-cart-plus"></button></i>
            </a>
        </div>
        <% if(!locals.usuarioLogueado){ %>
            <a href="/users/login">
                <button class="btn-header login-button" id="ingresar">Ingresar</button>
            </a>
            <a href="/users/register">
                <button class="btn-header register-button" id="registrar">Registrarse</button>
            </a>
        <button class="btn-header user-button-icon"><i class="fa-solid fa-user"></i></button>
    </div>
        <% } %>
    <div class="burguer-button">
        <button class="btn-header"><i class="fa-solid fa-bars"></i></button>
    </div>
    <% if(locals.usuarioLogueado){ %>
        <div class="user-logueado">
            <div style="display: flex; flex-direction: row; justify-content: center; align-items: center; padding: .5rem; gap: .4rem;">
                <img src="/images/users/<%= usuarioLogueado.avatar %>" alt="imagenPerfil" style="width: 3rem;">
                <p>¡Hola, <a href="/users/profile/<%= usuarioLogueado.id %>" style="color: #bf930d;"><%= usuarioLogueado.firstName %></a>! </p>
            </div>
            <p>Click acá para <a href="/users/logout" style="color: #bf930d;">cerrar sesión</a>. </p>
        </div>
    <% } %>
</header>